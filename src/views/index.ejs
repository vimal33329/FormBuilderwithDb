<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>
    <link href="css/bootstrap.min.css" rel="stylesheet" >
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>

    <div class="container">
	<div class = "col-md-12 p-3 text-center bg-info ">
	<div class = "row">
	<strong class = "col-md-12" >CRUD</strong>
	<button class="col-md-2 btn btn-sm btn-outline-dark " id = "add_formsdata" ><i class="bi bi-clipboard-plus mr-2"></i>ADD</button>
	</div>
	</div>
		
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Descripcion</th>
                    <th>Status</th>
					<th>Action</th>
                </tr>
            </thead>
            <tbody id = "data_details" >
            </tbody>
        </table>
    </div>
    
	
<!-- Modal formsdata-->
<div class="modal fade" id="DataModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">FORM </h5>
		<input hidden id = "selected_node" value = "" >
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
<form id = "data_form" >
  <div class="modal-body p-5">
  <div class="form-group">
    <label for="exampleInputEmail1">Form Name</label>
    <input type="text" class="form-control" name = "t_formsdata_name" aria-describedby="Form name" placeholder="Name">
  </div>
  
  <div class="form-group">
    <label for="exampleInputEmail1">Form Descripcion</label>
    <textarea  type="text" class="form-control" name = "t_formsdata_description" aria-describedby="Form Descripcion" placeholder="Descripcion"></textarea>
  </div>  
  
      </div>
  
      <div class="modal-footer">
		<input hidden id = "action" value = "" >
		<input hidden id = "data_id" value = "" >
		<button type="button" class="btn btn-sm btn-outline-success _submit_data" data-dismiss="modal">Submit</button>
        <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal" >Close</button>
      </div>
</form>  	  
    </div>
  </div>
</div>	

<!-- Modal delete formsdata-->
<div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog border border-danger" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger">
        <h5 class="modal-title" ></h5>
		<input hidden id = "selected_node" value = "" >
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
	  
	<div class="modal-body p-5">
	<h3 class = "text-danger" >ARE YOU SURE YOU WANT TO DELETE</h3>

	</div>
  
      <div class="modal-footer">
		<button type="submit" class="btn btn-sm btn-outline-danger confirm_delete" data-dismiss="modal">DELETE</button>
        <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal" >Close</button>
      </div>
	  
    </div>
  </div>
</div>	
		
	
	
	
	
</body>
<script src="js/bootstrap.bundle.min.js" ></script>
<script src="js/jquery.js" ></script>
<script>

$(document).ready(function(){ 
let data_url = `/formsdata`;
// Icons 
let del = '<i class="bi bi-trash text-danger"></i>';
let edit = '<i class="bi bi-pencil text-success"></i>';
let design = '<i class="bi bi-easel text-info"></i>';
let report = '<i class="bi bi-file-ruled text-info"></i>';
let icon_t = '<i class="bi bi-toggle-on text-success"></i>';
let icon_f = '<i class="bi bi-toggle-off text-danger"></i>';

// LOAD USER DATA
load_data = () => {
let table_body;
$.post(data_url, { swtch:"getData"  }, 
function(data, status){
$.each(data, function(key, dt) {
let icon = dt.status?icon_t:icon_f;
table_body += '<tr>';
table_body += '<td><strong>'+dt.name+'</strong></td>';
table_body += '<td>'+dt.description+'</td>';
table_body += '<td><button data-id = '+dt._id+' data-access = '+dt.status+' class = "btn rud change_status" >'+icon+'</button></td>';
var action = '<td><button class = "btn btn-sm btn-outline-dark data_edit m-2" data-id = '+dt._id+' data-name = "'+dt.name+'" data-description = "'+dt.description+'" >'+edit+'</button>';
action += '<button class = "btn btn-sm btn-outline-warning del_formsdata m-2" data-id = '+dt._id+' >'+del+'</button>';
action += '<a href = "/slug/'+dt._id+'" class = "btn btn-sm btn-outline-primary m-2" data-id = '+dt._id+' >'+design+'</a>';
action += '<a href = "#" class = "btn btn-sm btn-outline-success m-2" data-id = '+dt._id+' >'+report+'</a>';
action += '</td>';
table_body += action;
table_body += '</tr>';
});
$("#data_details").html(table_body);
});	
}
load_data();

// Table Actions

$('#add_formsdata').on( 'click', function () {
$('#data_form')[0].reset();		
$('.modal-title').html('ADD DATA');
$('#action').val('addData');
$('#DataModal').modal('show');
//data_modal.show();
});

$('#data_details').on( 'click','.data_edit', function () {
$("input[name='t_formsdata_title']").val($(this).data('title'));
$("textarea[name='t_formsdata_description']").val($(this).data('description'));
$('.modal-title').html('EDIT DATA');
$('#DataModal').modal('show');
$('#data_id').val($(this).data('id'));
$('#action').val('updateData');
});	

$('#data_details').on( 'click','.del_formsdata', function () {	
$('#DeleteModal').modal('show');
$('#data_id').val($(this).data('id'));
$('#action').val('del_formsdata');
});

$('#data_details').on( 'click','.change_status', function () {
$.post(data_url, { swtch:'change_status',uid:$(this).data('id'), access:$(this).data('access')  }, 
function(data, status){ load_data();
});	
});	



$('._submit_data,.confirm_delete').on( 'click', function () {
$.post(data_url, { 
name : $("input[name='t_formsdata_name']").val(), 
description : $("textarea[name='t_formsdata_description']").val(), 
swtch : $("#action").val(), 
data_id : $("#data_id").val()  
}, function(data, status){
$('#data_form')[0].reset();
$('#DataModal,#DeleteModal').modal('hide');
load_data();
});	
});


});
</script>
</html>